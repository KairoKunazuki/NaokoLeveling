    "compilerOptions": {
        "declaration": true,
        "target": "ES2021",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "alwaysStrict": true,
        "rootDir": "src",
        "outDir": "lib",
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}